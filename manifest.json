{
  "manifest_version": 3,
  "name": "Yoto Tools",
  "version": "1.1.0",
  "description": "View and selectively download a media backupfrom a Yoto card.",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.yotoplay.com/*",
    "https://*.cloudfront.net/*",
    "https://*.yoto.co/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Yoto Tools"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://play.yotoplay.com/*/card/*",
        "https://share.yoto.co/*"
      ],
      "js": ["content.js"]
    }
  ]
} 